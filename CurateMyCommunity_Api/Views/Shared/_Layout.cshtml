<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Curate My Community</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Curate My Community", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, null)</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Host Management", "Index", "ManageHosts", new { area = "Admin" }, null)</li>
                                <li>@Html.ActionLink("Community Management", "Index", "ManageCommunities", new { area = "Admin" }, null)</li>
                                <li>@Html.ActionLink("Exhibit Management", "Index", "ManageExhibits", new { area = "Admin" }, null)</li>
                                <li>@Html.ActionLink("User Management", "Index", "ManageUsers", new { area = "Admin" }, null)</li>
                                <li>@Html.ActionLink("Image Management", "Index", "ManageImages", new { area = "Admin" }, null)</li>
                            </ul>
                        </li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Logout", "Logout", "AccountLogin", new { area = "" }, null)</li>
                        <li>@Html.Action("UserNavPartial", "AccountLogin", new { area = "" })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Login", "AccountLogin", new { area = "" }, null)</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Curate My Community</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
