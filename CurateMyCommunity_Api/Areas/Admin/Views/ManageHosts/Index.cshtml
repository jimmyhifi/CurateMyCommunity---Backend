@model List<CurateMyCommunity_Api.Areas.Admin.Models.ManageHosts.ManageHostViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Hosts</h2>

<p>
    @Html.ActionLink("Create New", "Create", "ManageHosts")
</p>

@using (Html.BeginForm("Delete", "ManageHosts"))
{
<table class="table">
    <tr>
        <th>
            &nbsp;
        </th>
        <th>
            Id
        </th>
        <th>
            Host
        </th>
        <th>
            Twitter Handle
        </th>
        <th></th>
    </tr>

@for (int i = 0; i < Model.Count; i++)
{
    var item = Model[i];
    <tr>
        <td>
            @Html.HiddenFor(x => Model[i].id_hosts)
            @Html.CheckBoxFor(x => Model[i].is_selected)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.id_hosts)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.host_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.twitter_handle)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.id_hosts })
    </tr>
}

</table>
<button type="submit" class="btn btn-danger">Delete Selected</button>
}