@model List<CurateMyCommunity_Api.Areas.Admin.Models.ManageImages.ManageImageViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", "ManageImages")
</p>

@using (Html.BeginForm("Delete", "ManageImages"))
{
<table class="table">
    <tr>
        <th>
            &nbsp;
        </th>
        <th>
            Image Url
        </th>
        <th></th>
    </tr>

@for (int i = 0; i < Model.Count; i++)
{
    var item = Model[i];
    <tr>
        <td>
            @Html.HiddenFor(x => Model[i].id_images)
            @Html.CheckBoxFor(x => Model[i].is_selected)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.image_url)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.id_images })
        </td>
    </tr>
}

</table>
<button type="submit" class="btn btn-danger">Delete Selected</button>
}
